<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_50"
    >


    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_language_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- empty list -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_langauges_empty"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/listview_language_msg_empty"
            android:text="@string/no_languages"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/material_blue_grey_700"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_language"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/add_language"
            />


    </LinearLayout>

</LinearLayout>